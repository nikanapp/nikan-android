<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="StartActivityTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/start_splash_shoufa</item>
    </style>

    <style name="CameraPlayStye" parent="@style/AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="transparentDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="report_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="topic_window_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/topiclist_window_in</item>
        <item name="@android:windowExitAnimation">@anim/topiclist_window_out</item>
    </style>

    <style name="PicturePopWindowStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="RotationProgressdDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- activity不变暗 -->
    </style>

    <!-- 设置页面relactive样式 -->
    <style name="setting_layout_group_head" parent="setting_layout">
        <item name="android:layout_marginTop">33dip</item>
    </style>

    <style name="setting_layout_head" parent="setting_layout">
        <item name="android:layout_marginTop">18dip</item>
    </style>

    <style name="setting_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/setting_item_background</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="setting_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/p_big_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/default_background</item>
    </style>

    <style name="setting_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="setting_slidbutton">
        <item name="android:layout_width">45dip</item>
        <item name="android:layout_height">28dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 设置页面 -->
    <style name="about_activity_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

<!--         <item name="android:background">@drawable/display</item>
 -->       
    <style name="main_activity_des">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
         <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="message_dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_message_number</item>
    </style>

    
     <style name="desci_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
     <style name="translucentTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowFrame">@null</item>
	</style>
	
    <style name="video_info_text">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="video_info_text_num" parent="video_info_text">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="video_info_text_des" parent="video_info_text">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    
        
    <!-- 魅族 smart bar 自定义style start -->
    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light"></style>
    
    
    <style name="Transparent" parent="android:Theme.Light"> 
        <!--将Activity的Theme设置成透明--> 
        <item name="android:windowIsTranslucent">true</item> 
    </style> 

    <style name="view_expression_item">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="btn_dialog_accept">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/dialog_btn_accept</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_dialog_accept_selector</item>
    </style>

    <style name="dialog_following_num">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dialog_edit_line_yellow</item>
    </style>

    <style name="dialog_following_text">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>