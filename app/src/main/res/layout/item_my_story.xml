<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/item_my_story_layout"
        android:layout_width="307dp"
        android:layout_height="173dp"
        android:layout_gravity="center">

        <include
            android:id="@+id/item_my_story_preview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_story_preview"/>

        <View
            android:id="@+id/item_my_story_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_myvideo_cover"
            android:visibility="visible" />

        <include
            android:id="@+id/item_my_story_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            layout="@layout/layout_story_info"/>

        <include
            android:id="@+id/item_my_story_info_progressLayout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            layout="@layout/layout_upload_progress" />

        <CheckBox
            android:id="@+id/item_my_story_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/btn_video_check_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:visibility="visible" />

    </FrameLayout>

</FrameLayout>