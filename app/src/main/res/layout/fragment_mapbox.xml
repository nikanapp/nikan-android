<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mapbox.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_mapbox_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/fragment_mapbox_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_main_control" />

    <ImageView
        android:id="@+id/fragment_mapbox_main_location_animview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <View
        android:id="@+id/fragment_mapbox_touch_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</FrameLayout>