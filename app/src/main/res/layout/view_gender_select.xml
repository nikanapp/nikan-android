<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_man_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_type_select"
            android:textColor="#8F8A87"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/man_type_male_layout"
            android:layout_marginBottom="34dp"/>

        <LinearLayout
            android:id="@+id/man_type_male_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/man_type_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:background="@drawable/btn_male_selector" />

            <ImageView
                android:id="@+id/man_type_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:background="@drawable/btn_female_selector" />
        </LinearLayout>

</RelativeLayout>