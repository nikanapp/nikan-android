<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/mk_lonely_random_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mk_lonely_center_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_mk_lonely_random"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/background_mk_lonely_description"/>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/mk_lonely_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/mk_lonely_desc"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="One peaceful Afternoon with Sunshine and Beauties"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mk_lonely_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mk_lonely_desc"
            android:layout_alignRight="@+id/mk_lonely_desc"
            android:text="Sep. 21st, 2015"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mk_lonely_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mk_lonely_date"
            android:layout_alignBottom="@+id/mk_lonely_date"
            android:text="12:30"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mk_lonely_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="58dp"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/tiny_dot_inversion"
            android:text="guangdong"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>

</merge>