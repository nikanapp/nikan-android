<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_video_file_image"
        android:layout_width="@dimen/activity_videofilelist_item_height"
        android:layout_height="@dimen/activity_videofilelist_item_height"
        android:scaleType="centerCrop" />
    
    <View 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/item_video_file_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_alignRight="@+id/item_video_file_image"
        android:layout_alignBottom="@+id/item_video_file_image"
        android:textColor="@color/white"/>

</RelativeLayout>