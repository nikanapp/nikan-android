<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mk_quiet_play_desc"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/mk_quiet_play_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mk_quiet_play_desc"
        android:drawableLeft="@drawable/tiny_dot_inversion"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:visibility="visible" />


    <TextView
        android:id="@+id/mk_quiet_play_hour"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mk_quiet_play_date"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="37sp" />

    <TextView
        android:id="@+id/mk_quiet_play_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:textSize="15sp" />

</RelativeLayout>